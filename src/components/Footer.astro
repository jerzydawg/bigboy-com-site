---
import { getSiteName, getKeyword, getDomain, getSiteURL, getDesignDNA } from '../lib/site-config';
import { getContentVariations } from '../lib/city-content-variations';

// Get dynamic site configuration
const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();
const designDNA = getDesignDNA();

// Get content variations for this domain
const content = getContentVariations(domain);

// Smart keyword formatting - avoid "Get Your my gov phone" grammar issues
const keywordLower = keyword.toLowerCase();
const keywordDisplay = keywordLower.startsWith('my ') || keywordLower.startsWith('your ') || keywordLower.startsWith('a ') || keywordLower.startsWith('the ')
  ? keyword  // Already has article/possessive, use as-is
  : `Your ${keyword}`;  // Add possessive
---

<footer class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white">
  <!-- Single Responsive Footer - No Duplicates -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    <!-- Hero CTA Section - Responsive -->
    <div class="rounded-2xl p-6 md:p-8 mb-6 md:mb-10 relative overflow-hidden" style={`background: linear-gradient(90deg, ${designDNA.colors.primary} 0%, ${designDNA.colors.secondary} 100%);`}>
      <div class="absolute inset-0 bg-black/10 md:bg-black/10"></div>
      <div class="relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 items-center">
          <div class="text-center lg:text-left">
            <h2 class="text-2xl md:text-3xl font-bold mb-2 md:mb-4 text-white">
              Get {keywordDisplay} Today!
            </h2>
            <p class="text-white/90 text-sm md:text-lg leading-relaxed">
              {content.footerTagline}
            </p>
          </div>
          
          <div class="text-center">
            <a href="/apply" rel="noreferrer" class="inline-block w-full md:w-auto bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-slate-900 font-bold py-4 px-6 md:px-8 rounded-xl shadow-xl transform hover:scale-105 transition-all duration-200">
              <span class="text-lg md:text-xl">{content.ctaButton.toUpperCase()}</span>
            </a>
            
            <!-- Trust Indicators - Responsive -->
            <div class="flex items-center justify-center flex-wrap gap-2 md:gap-0 md:space-x-6 mt-4 text-xs md:text-sm text-white/80">
              <span>{content.trustBadges[0]}</span>
              <span class="hidden md:inline">•</span>
              <span>{content.trustBadges[1]}</span>
              <span class="hidden md:inline">•</span>
              <span class="hidden md:inline">{content.trustBadges[2]}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Footer - Copyright Only -->
    <div class="border-t border-slate-700 pt-4 md:pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-slate-400 text-xs md:text-sm text-center md:text-left">
          © 2025 {domain}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const title = `${keyword} - Lifeline Free Phone Program | ${siteName}`;
const description = "Get your free Lifeline phone today. Learn how to qualify for free monthly service, unlimited talk and text, plus data. Apply now for your government phone.";
---

<Layout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": `${keyword} - Lifeline Free Phone Program`,
    "description": description,
    "author": {
      "@type": "Organization",
      "name": siteName
    },
    "publisher": {
      "@type": "Organization",
      "name": siteName,
      "url": siteURL
    },
    "datePublished": "2025-12-09",
    "dateModified": "2025-12-09",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": `${siteURL}/lifeline-program`
    }
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How much does a Lifeline phone cost?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Lifeline phones are completely free. You get the phone at no cost, plus free monthly service with unlimited talk and text."
        }
      },
      {
        "@type": "Question",
        "name": "How long does it take to get approved?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Most applications are approved within 24-48 hours. Once approved, your free phone ships within 3-5 business days."
        }
      },
      {
        "@type": "Question",
        "name": "Can I keep my current phone number?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, you can transfer your existing phone number to your new Lifeline phone at no extra charge."
        }
      }
    ]
  })} />

  <!-- Breadcrumb Navigation -->
  <nav class="bg-gray-50 py-3">
    <div class="container mx-auto px-4">
      <div class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-[var(--color-primary)] hover:underline">Home</a>
        <span class="text-gray-500">/</span>
        <span class="text-gray-700">Lifeline Program</span>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-12">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        {keyword} - Lifeline Free Phone Program
      </h1>
      <p class="text-xl text-gray-700 mb-8 max-w-3xl mx-auto">
        Get your free smartphone with unlimited talk, text, and data. No contracts, no credit checks, no hidden fees.
      </p>
      <a href="/apply" class="bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-gray-900 font-bold py-3 px-6 rounded-xl shadow-lg">
        Get Your Free Phone Now
      </a>
    </div>
  </section>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      
      <!-- What is Lifeline Section -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">What is the Lifeline Program?</h2>
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <p class="text-gray-700 mb-4">
            The Lifeline program helps low-income Americans stay connected with free phone service. When you search for {keyword}, you're looking for real government assistance that provides essential communication services at no cost to you.
          </p>
          <p class="text-gray-700">
            This federal program has helped millions of people get free phones and monthly service since 1985. {siteName} makes it easy to check your eligibility and apply for your free phone in minutes.
          </p>
        </div>
      </section>

      <!-- What You Get Section -->
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">What You Get with Your Free Phone</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900">Free Smartphone</h3>
            </div>
            <p class="text-gray-700">Brand new Android smartphone with all essential features including camera, GPS, and internet access.</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900">Unlimited Talk & Text</h3>
            </div>
            <p class="text-gray-700">Make unlimited calls and send unlimited text messages anywhere in the United States.</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900">Free Monthly Data</h3>
            </div>
            <p class="text-gray-700">Get high-speed data every month to browse the internet, check email, and use apps.</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900">No Credit Check</h3>
            </div